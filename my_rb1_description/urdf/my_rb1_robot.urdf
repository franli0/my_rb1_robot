<?xml version="1.0"?>
<robot name="my_rb1_robot">

  <!-- Materials -->
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="dark_blue">
    <color rgba="0.0 0.0 0.5 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="yellow">
    <color rgba="0.8 0.8 0.0 1.0"/>
  </material>

  <!-- Base Footprint -->
  <link name="base_footprint">
    <inertial>
      <mass value="0.0001"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <!-- Base cylinder weighs 20 kg -->
      <mass value="20.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Moment of inertia for a cylinder: 
           Ixx = Iyy = (1/12)*m*(3*r^2 + h^2)
           Izz = (1/2)*m*r^2 -->
      <inertia ixx="0.6042" ixy="0.0" ixz="0.0" iyy="0.6042" iyz="0.0" izz="0.625"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Base footprint to Base Link Joint -->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Moment of inertia for a cylinder along y-axis:
           Ixx = Izz = (1/4)*m*r^2 + (1/12)*m*l^2
           Iyy = (1/2)*m*r^2 -->
      <inertia ixx="0.00159" ixy="0.0" ixz="0.0" iyy="0.00125" iyz="0.0" izz="0.00159"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel Joint -->
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.0 -0.2 -0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.01" friction="0.01"/>
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Same moments of inertia as the right wheel -->
      <inertia ixx="0.00159" ixy="0.0" ixz="0.0" iyy="0.00125" iyz="0.0" izz="0.00159"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel Joint -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.0 0.2 -0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.01" friction="0.01"/>
  </joint>

  <!-- Front Caster -->
  <link name="front_caster">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Moment of inertia for a sphere:
           Ixx = Iyy = Izz = (2/5)*m*r^2 -->
      <inertia ixx="0.00013" ixy="0.0" ixz="0.0" iyy="0.00013" iyz="0.0" izz="0.00013"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <!-- Front Caster Joint -->
  <joint name="front_caster_joint" type="fixed">
    <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="front_caster"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.01"/>
  </joint>

  <!-- Back Caster -->
  <link name="back_caster">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Same moments of inertia as front caster -->
      <inertia ixx="0.00013" ixy="0.0" ixz="0.0" iyy="0.00013" iyz="0.0" izz="0.00013"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <!-- Back Caster Joint -->
  <joint name="back_caster_joint" type="fixed">
    <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="back_caster"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.01"/>
  </joint>

  <!-- Front Laser -->
  <link name="front_laser">
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Approximating laser as a cylinder -->
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0025" iyz="0.0" izz="0.00125"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.02"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- Front Laser Joint -->
  <joint name="front_laser_joint" type="fixed">
    <origin xyz="0.25 0.0 0.075" rpy="3.14159 0 0"/>
    <parent link="base_link"/>
    <child link="front_laser"/>
  </joint>
  
</robot>